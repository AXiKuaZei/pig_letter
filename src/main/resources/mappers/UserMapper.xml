<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.axikuazei.pigletter.dao.UserMapper">


    <select id="selectUserByName" parameterType="String" resultType="indi.axikuazei.pigletter.dao.entity.User">
        select * from user where user_name = #{str}
    </select>

    <insert id="insertNewUser" parameterType="indi.axikuazei.pigletter.dao.entity.User">
        insert into user(user_name,user_password,user_email,register_date)
        values(#{user_name},#{user_password},#{register_date},#{register_date})
    </insert>


</mapper>